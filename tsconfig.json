{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "jsx": "react",
        "outDir": "artifacts",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "typeRoots": [
            "../node_modules/@types/",
            "custom-typings/"
        ]
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "__tests__/**/*.js",
        "index.android.js",
        "index.ios.js",
        "artifacts",
        "node_modules"
    ],
    "compileOnSave": false
}